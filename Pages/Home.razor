    private async Task RefreshRemotePlayers()
    {
        var allPlayers = await Firebase.GetNodeAsync<Dictionary<string, PlayerData>>("players");
        if (allPlayers == null) return;

        var now = DateTimeOffset.UtcNow.ToUnixTimeSeconds();
        
        // Filter: Same System && Active (< 10s) && Not Me
        var otherPilots = allPlayers
            .Where(p => p.Key != State.SessionId)
            .Where(p => p.Value.system == Galaxy.CurrentSystem.Id)
            .Where(p => (now - p.Value.lastSeen) < 10)
            .Select(p => new {
                sessionId = p.Key,
                name = p.Value.name,
                x = p.Value.x, y = p.Value.y, z = p.Value.z,
                rx = p.Value.rx, ry = p.Value.ry, rz = p.Value.rz,
                ship = p.Value.ship
            })
            .ToList();

        await JSRuntime.InvokeVoidAsync("spaceRenderer.updateRemotePlayers", otherPilots);

        // [NEW] Polling Chat
        var chatData = await Firebase.GetNodeAsync<Dictionary<string, ChatMessage>>($"sectors/{Galaxy.CurrentSystem.Id}/chat");
        if (chatData != null)
        {
            foreach (var m in chatData.Values.OrderBy(x => x.Timestamp))
            {
                State.AddMessage(m);
            }
        }
    }


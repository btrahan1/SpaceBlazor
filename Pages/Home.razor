    private async Task StartGhostSync()
    {
        using var timer = new PeriodicTimer(TimeSpan.FromSeconds(2));
        while (await timer.WaitForNextTickAsync())
        {
            if (State.IsMultiplayerEnabled)
            {
                await RefreshRemotePlayers();
            }
        }

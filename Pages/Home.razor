    private async Task Buy(string item, int price)
    {
        if (currentStation == null) return;
        int qty = currentStation.MarketQuantities.ContainsKey(item) ? currentStation.MarketQuantities[item] : 0;

        if (State.Credits >= price && State.GetCargoCount() < State.CargoCapacity && qty > 0)
        {
             State.ModifyCredits(-price);
             State.AddCargo(item, 1);
             
             // Update Local
             currentStation.MarketQuantities[item]--;
             
             // Sync Firebase
             await Firebase.UpdateNodeAsync($"sectors/{Galaxy.CurrentSystem.Id}/market", currentStation.MarketQuantities);
        }
    }

    private async Task BuyMax(string item, int price)
    {
        if (currentStation == null) return;
        int qty = currentStation.MarketQuantities.ContainsKey(item) ? currentStation.MarketQuantities[item] : 0;

        // Calculate factors
        int maxAfford = State.Credits / price;
        int maxSpace = State.CargoCapacity - State.GetCargoCount();
        int maxStock = qty;
        
        // Take the absolute limit
        int amount = Math.Min(maxAfford, Math.Min(maxSpace, maxStock));
        
        if (amount > 0)
        {
            State.ModifyCredits(-(amount * price));
            State.AddCargo(item, amount);

            // Update Local
            currentStation.MarketQuantities[item] -= amount;
             
            // Sync Firebase
            await Firebase.UpdateNodeAsync($"sectors/{Galaxy.CurrentSystem.Id}/market", currentStation.MarketQuantities);
        }
    }

    private async Task Sell(string item, int price)
    {
        if (currentStation == null) return;

        if (State.Cargo.ContainsKey(item) && State.Cargo[item] > 0)
        {
             State.ModifyCredits(price);
             State.RemoveCargo(item, 1);

             // Update Local
             if (!currentStation.MarketQuantities.ContainsKey(item)) currentStation.MarketQuantities[item] = 0;
             currentStation.MarketQuantities[item]++;
             
             // Sync Firebase
             await Firebase.UpdateNodeAsync($"sectors/{Galaxy.CurrentSystem.Id}/market", currentStation.MarketQuantities);
        }
    }

    private async Task SellMax(string item, int price)

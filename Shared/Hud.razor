@inject SpaceBlazor.Services.GameState State
@inject SpaceBlazor.Services.GalaxyService Galaxy
@inject SpaceBlazor.Services.PersistenceService Persist
@inject SpaceBlazor.Services.FirebaseService Firebase
@inject IJSRuntime JSRuntime
@using SpaceBlazor.Services
@using SpaceBlazor.Pages
@implements IDisposable

@code {
    private SaveLoadModal saveModal;
    [CascadingParameter] public Home? ParentHome { get; set; }
    private bool isSyncing = false;

    protected override void OnInitialized()
    {
        State.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        State.OnChange -= StateHasChanged;
    }

    private string GetShieldPct() => ((double)State.Shield / State.MaxShield * 100).ToString("0");
    private string GetHullPct() => ((double)State.Hull / State.MaxHull * 100).ToString("0");
    private string GetFuelPct() => ((double)State.Fuel / State.MaxFuel * 100).ToString("0");

    private async Task OpenSave()
    {
        if (State.IsMultiplayerEnabled && ParentHome != null)
        {
            isSyncing = true;
            StateHasChanged();
            await ParentHome.TriggerCloudSave();
            await Task.Delay(1000); // Visual feedback
            isSyncing = false;
        }
        else
        {
            await saveModal.Show("SAVE");
        }
    }

    private async Task OpenLoad()
    {
        await saveModal.Show("LOAD");
    }

    private bool isMuted = false;

    private async Task ToggleMute()
    {
        isMuted = !isMuted;
        await JSRuntime.InvokeVoidAsync("spaceRenderer.sfx.setMute", isMuted);
    }

    private void OnLoadComplete()
    {
        Console.WriteLine("Game Loaded via Modal.");
    }

    private string chatInput = "";
    private async Task SendChatMessage()
    {
        if (string.IsNullOrWhiteSpace(chatInput)) return;

        var msg = new ChatMessage {
            Sender = State.Callsign,
            Text = chatInput,
            Timestamp = DateTimeOffset.UtcNow.ToUnixTimeSeconds(),
            SystemId = Galaxy.CurrentSystem.Id
        };

        // Push to Firebase (Sector Path)
        await Firebase.PushNodeAsync($"sectors/{Galaxy.CurrentSystem.Id}/chat", msg);
        
        chatInput = ""; // Clear
        StateHasChanged();
    }

    private async Task OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SendChatMessage();
        }
    }
    private PlayerListModal playerListModal;

    private async Task OpenPlayers()
    {
        if (State.IsMultiplayerEnabled)
        {
            await playerListModal.Show();
        }
    }
}

<div class="hud-container">
    <!-- Top Left Group -->
    <div class="left-column">
        <div class="hud-panel status-panel">
            <div class="status-row" style="border-bottom: 1px solid #004400; padding-bottom: 5px; margin-bottom: 10px; justify-content: center;">
                 <span style="color: cyan; font-weight: bold; font-size: 1.1em;">@State.CurrentShip.Name.ToUpper()</span>
            </div>
            <div class="status-row">
                <span class="label">SHIELD</span>
                <div class="bar-container">
                    <div class="bar shield-bar" style="width: @(GetShieldPct())%"></div>
                </div>
                <span class="value">@State.Shield</span>
            </div>
            <div class="status-row">
                <span class="label">HULL</span>
                <div class="bar-container">
                    <div class="bar hull-bar" style="width: @(GetHullPct())%"></div>
                </div>
                <span class="value">@State.Hull</span>
            </div>
            <div class="status-row">
                <span class="label">FUEL</span>
                <div class="bar-container">
                    <div class="bar fuel-bar" style="width: @(GetFuelPct())%"></div>
                </div>
                 <span class="value">@State.Fuel</span>
            </div>
        </div>

        <!-- Controls Panel -->
        <div class="hud-panel controls-panel">
            <div class="panel-header">SYSTEM CONTROLS</div>
            <div class="key-row"><span class="k">W A S D</span> <span>Throttle/Strafe</span></div>
            <div class="key-row"><span class="k">MOUSE</span> <span>Pitch/Yaw</span></div>
            <div class="key-row"><span class="k">SPACE</span> <span>Fire Cannons</span></div>
            <div class="key-row"><span class="k">SHIFT+R</span> <span>Toggle Cruise</span></div>
            <div class="key-row"><span class="k">L</span> <span>Initiate Landing</span></div>
            <div class="key-row"><span class="k">SHIFT+L</span> <span>Auto-Land (Dev)</span></div>
            <div class="key-row"><span class="k">M</span> <span>Sector Map</span></div>
            <div class="key-row"><span class="k">TAB</span> <span>Toggle Cursor</span></div>
            <div class="key-row"><span class="k">SHIFT+T</span> <span>Trade (Dev)</span></div>
            <div class="key-row"><span class="k">SHIFT+Y</span> <span>Shipyard (Dev)</span></div>
        </div>
    </div>

    <!-- Top Right: Economy -->
    <div class="hud-panel eco-panel">
        <div class="pilot-id">PILOT: @State.Callsign.ToUpper()</div>
        @if (State.IsMultiplayerEnabled)
        {
            <div class="multi-tag">FEDERATION NET LIVE</div>
        }
        <div class="system-name">System: @Galaxy.CurrentSystem.Name</div>
        <div class="credits">@State.Credits.ToString("N0") CR</div>
        
        <div class="cargo-manifest">
            <div class="manifest-header">-- CARGO HOLD --</div>
            @if (State.Cargo.Any(c => c.Value > 0))
            {
                @foreach (var item in State.Cargo.Where(c => c.Value > 0))
                {
                    <div class="cargo-row">
                        <span class="c-name">@item.Key</span>
                        <span class="c-qty">@item.Value</span>
                    </div>
                }
            }
            else
            {
                <div class="cargo-empty">EMPTY</div>
            }
        </div>

        <div class="persist-controls" @onmousedown:stopPropagation @onclick:stopPropagation>
            <!-- MUTE TOGGLE -->
            <div style="display:flex; align-items:center; color:cyan; font-size:12px; margin-right:5px; cursor:pointer;" @onclick="ToggleMute">
                <input type="checkbox" @bind="isMuted" style="cursor:pointer;" />
                <span style="margin-left:3px;">MUTE</span>
            </div>
            @if (isSyncing)
            {
                <span style="font-size: 10px; color: gold; margin-right: 5px; animation: blink 0.5s infinite;">CLOUD SYNCED</span>
            }
            
            @if (State.IsMultiplayerEnabled)
            {
                <button class="btn-hud" @onclick="OpenPlayers">PLAYERS</button>
            }

            <button class="btn-hud" @onclick="OpenSave">SAVE</button>
            <button class="btn-hud" @onclick="OpenLoad">@(State.IsMultiplayerEnabled ? "DATA" : "LOAD")</button>
        </div>
    </div>

    <!-- Bottom Center: Radar -->
    <div class="hud-panel radar-panel">
        <canvas id="radarCanvas" width="200" height="200"></canvas>
    </div>

    <!-- Bottom Left: Sector Chat -->
    @if (State.IsMultiplayerEnabled)
    {
        <div class="hud-panel chat-panel" @onmousedown:stopPropagation @onclick:stopPropagation>
            <div class="chat-header">SECTOR NET: @Galaxy.CurrentSystem.Name.ToUpper()</div>
            <div class="chat-log">
                @foreach (var msg in State.RecentMessages.Where(m => m.SystemId == Galaxy.CurrentSystem.Id).TakeLast(10))
                {
                    <div class="chat-msg">
                        <span class="chat-time">[@DateTimeOffset.FromUnixTimeSeconds(msg.Timestamp).LocalDateTime.ToString("HH:mm")]</span>
                        <span class="chat-sender">@msg.Sender:</span>
                        <span class="chat-text">@msg.Text</span>
                    </div>
                }
            </div>
            <div class="chat-input-wrapper">
                 <input type="text" @bind="chatInput" @onkeydown="OnKeyPress" placeholder="Broadcast message..." class="chat-input" />
            </div>
        </div>
    }
</div>

<SaveLoadModal @ref="saveModal" OnLoadComplete="OnLoadComplete" />
<PlayerListModal @ref="playerListModal" />


@inject SpaceBlazor.Services.GameState State
@inject SpaceBlazor.Services.GalaxyService Galaxy
@inject SpaceBlazor.Services.PersistenceService Persist
@implements IDisposable

@code {
    private SaveLoadModal saveModal;

    protected override void OnInitialized()
    {
        State.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        State.OnChange -= StateHasChanged;
    }

    private string GetShieldPct() => ((double)State.Shield / State.MaxShield * 100).ToString("0");
    private string GetHullPct() => ((double)State.Hull / State.MaxHull * 100).ToString("0");
    private string GetFuelPct() => ((double)State.Fuel / State.MaxFuel * 100).ToString("0");

    private async Task OpenSave()
    {
        await saveModal.Show("SAVE");
    }

    private async Task OpenLoad()
    {
        await saveModal.Show("LOAD");
    }

    private void OnLoadComplete()
    {
        Console.WriteLine("Game Loaded via Modal.");
    }
}

<div class="hud-container">
    <!-- Top Left: Ship Status -->
    <div class="hud-panel status-panel">
        <div class="status-row">
            <span class="label">SHIELD</span>
            <div class="bar-container">
                <div class="bar shield-bar" style="width: @(GetShieldPct())%"></div>
            </div>
            <span class="value">@State.Shield</span>
        </div>
        <div class="status-row">
            <span class="label">HULL</span>
            <div class="bar-container">
                <div class="bar hull-bar" style="width: @(GetHullPct())%"></div>
            </div>
            <span class="value">@State.Hull</span>
        </div>
        <div class="status-row">
            <span class="label">FUEL</span>
            <div class="bar-container">
                <div class="bar fuel-bar" style="width: @(GetFuelPct())%"></div>
            </div>
             <span class="value">@State.Fuel</span>
        </div>
    </div>

    <!-- Top Right: Economy -->
    <div class="hud-panel eco-panel">
        <div class="system-name">System: @Galaxy.CurrentSystem.Name</div>
        <div class="credits">@State.Credits.ToString("N0") CR</div>
        
        <div class="cargo-manifest">
            <div class="manifest-header">-- CARGO HOLD --</div>
            @if (State.Cargo.Any(c => c.Value > 0))
            {
                @foreach (var item in State.Cargo.Where(c => c.Value > 0))
                {
                    <div class="cargo-row">
                        <span class="c-name">@item.Key</span>
                        <span class="c-qty">@item.Value</span>
                    </div>
                }
            }
            else
            {
                <div class="cargo-empty">EMPTY</div>
            }
        </div>

        <div class="persist-controls" @onmousedown:stopPropagation @onclick:stopPropagation>
            <button class="btn-hud" @onclick="OpenSave">SAVE</button>
            <button class="btn-hud" @onclick="OpenLoad">LOAD</button>
        </div>
    </div>

    <!-- Bottom Center: Radar -->
    <div class="hud-panel radar-panel">
        <canvas id="radarCanvas" width="200" height="200"></canvas>
    </div>
</div>

<SaveLoadModal @ref="saveModal" OnLoadComplete="OnLoadComplete" />

